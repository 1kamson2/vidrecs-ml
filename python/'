import logging
from typing import Literal


def logger_builder(name: str, level: Literal[20] | Literal[30] | Literal[40]):
    """
    Parameters:
        - name: this should be the name of file ('__name__'), filename will be
          used but stripped of '_'
        - level: 'INFO' or 'WARNING' or 'ERROR' (all from 'logging' module)
    Function:
        This function builds the logger.
    """
    filename = name.strip("_")
    format = "%(asctime)s %s"
    logger = logging.basicConfig(filename=filename, level=level, format=format)
